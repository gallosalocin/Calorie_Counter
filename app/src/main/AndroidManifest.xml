<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gallosalocin.calorie_counter">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/calorie_counter_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.DetailsActivity"
            android:parentActivityName=".ui.SearchActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".ui.SearchActivity" />
        <activity
            android:name=".ui.MealActivity"
            android:noHistory="true"
            android:parentActivityName=".ui.DayActivity" />
        <activity
            android:name=".ui.BmrActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.DayActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>